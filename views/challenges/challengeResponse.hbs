<h1> you made it </h1>
<form method="POST" action="/challenges/{{title}}" enctype="multipart/form-data" margin="20px 0 0 0">
  <div class="form-group row">
    <label class="col-2 col-form-label" for="challenge-caption">Caption</label>
 <div class="col">
      <input name="challenge[caption]" type="text" class="form-control" id="challenge-caption">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-2 col-form-label" for="category">Challenge Category? </label>
    <div class="col">
      <select name="challenge[categoryId]" id="challenge-category_id">
        <option value="">Select a category</option>
          {{#each allCategories}}
            <option value="{{id}}">{{name}}</option>
          {{/each}}
      </select>
    </div>
  </div>

  <div ="form-group row">
    <label class="col-2 col-form-label" for="challenge-video">Video Upload</label>
      <input key = "video" type="file" name="fileToUpload" accept="video/*">
  </div>
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>

{{#if response}}
{{#each response}}
<video height= "300" width= "300" controls>
<source src="{{video.videoLink}}" type="video/mp4">
</video>
