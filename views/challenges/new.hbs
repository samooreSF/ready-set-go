{{#if errors}}
  <ul>
    {{#each errors}}
      {{#each this}}
        <li>{{@../key}} {{message}}</li>
      {{/each}}
    {{/each}}
  </ul>
{{/if}}

<form method="POST" action="/challenges" enctype="multipart/form-data">
  <div class="form-group row">
    <label class="col-2 col-form-label" for="challenge-title">Title</label>

    <div class="col">
      <input name="challenge[title]" type="text" class="form-control" id="challenge-title">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-2 col-form-label" for="challenge-caption">Caption</label>
 <div class="col">
      <input name="challenge[caption]" type="text" class="form-control" id="challenge-caption">
    </div>
  </div>

  <div class="form-group row">
      <label class="col-2 col-form-label" for="category">Challenge Category? </label>
  <div class="col">
    <input type="checkbox" id="dance" name="dance">
    <label for="dance">Dance</label>
    <input type="checkbox" id="food" name="food">
    <label for="food">Food</label>
    <input type="checkbox" id="acting" name="acting">
    <label for="acting">Acting</label>
    <input type="checkbox" id="music" name="music">
    <label for="music">Music</label>
    <input type="checkbox" id="art" name="art">
    <label for="art">Art</label>
    </div>
  </div>


  <div ="form-group row">
    <label class="col-2 col-form-label" for="challenge-video">Video Upload</label>
      <input key = "video" type="file" name="fileToUpload" accept="video/*">
  </div>
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
